#!/usr/bin/env python

import subprocess


def get_vrams():
    proc = subprocess.Popen(['vram'], stdout=subprocess.PIPE)
    out, err = proc.communicate()

    if not err:
        ret = out[:-1] if out[-1] == '\n' else out
        return ret.split(' ')
    return ""


def main():
    print get_vrams()
    print "Done"


if __name__ == "__main__":
    main()
